

<h2 div class ="content-head tripLocation"> Location: <%= @trip.location %> </h2>
<h2 div class ="content-head tripDate"> Date: <%= @trip.date %> </h2>
<h2 div class ="content-head tripDuration"> Duration: <%= @trip.duration %> days </h2>
<h2 div class ="content-head tripBackpack"> Backpack Size: <%= @trip.backpack_size %> liters </h2>
<h2 div class ="content-head tripType"> Camping Type: <%= @trip.camping_type %> </h2>
<h2 div class ="content-head tripWeather"> Weather: <%= @trip.weather %>  </h2>



<h2 div class ="content-head"> This is what you have packed.</h2>

<% @trip.items.each do |item| %>
<ul>
    <li>
      <%= link_to item.name, item_path(item.id)%>
  </li>
</ul>
<% end %>

<h2 div class ="content-head"> Your backpack weighs <%= @trip.current_backpack_weight %> pound(s). </h2>

<a href="#" class="js-next" data-id="<%=@trip.id%>">Next Trip</a>


<script type="text/javascript" charset="utf-8">
$(function () {
  $(".js-next").on("click", function() {
    var nextId = parseInt($(".js-next").attr("data-id")) + 1;
    $.get("/trips/" + nextId + ".json", function(data) {
      $(".tripLocation").text(data["location"]);
      $(".tripDate").text(data["date"]);
      $(".tripDuration").text(data["duration"]);
      $(".tripBackpack").text(data["backpack_size"]);
      $(".tripType").text(data["camping_type"]);
      $(".tripWeather").text(data["weather"]);

      // re-set the id to current on the link
      $(".js-next").attr("data-id", data["id"]);
    });
  });
});
</script>






<div class ="splash-subhead">

  <%= link_to 'Edit Trip', edit_trip_path(@trip) %> <br>
  <%= link_to "Create Another Trip", new_trip_path %> <br>
  <%= link_to "View all Trips", trips_path %> <br>
   <%= link_to "Delete", @trip, method: :delete %>
</div>
